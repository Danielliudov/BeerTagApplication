<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_lt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.home.HomePage">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:todo_card="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        todo_card:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/relative_layout_beerlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/status_color"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:layout_marginStart="7dp"
                android:src="@drawable/background_shape"
                todo_card:ignore="ContentDescription" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="20dp"
                 />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/beerbrand_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="80dp"
                android:text="Brand:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                todo_card:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/beername_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="80dp"
                android:text="Name:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                todo_card:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/beerabv_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="80dp"
                android:text="ABV%:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                todo_card:ignore="RtlSymmetry" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigator_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/background_shape"
        app:headerLayout="@layout/header"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/drawermenu"


        />
</android.support.v4.widget.DrawerLayout>